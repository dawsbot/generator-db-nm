{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "license": "MIT",
  "homepage": "https://github.com/<%= githubUsername %>/<%= moduleName %>#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubUsername %>/<%= moduleName %>.git"
  },
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= humanizedWebsite %>"
  },
  "bugs": {
    "url": "https://github.com/<%= githubUsername %>/<%= moduleName %>/issues"
  },<% if (cli) { %>
  "bin": {
    "<%= moduleName %>": "cli.js"
  },<% } %>
  "engines": {
    "node": ">=0.12.0"
  },
  "scripts": {
    "build": "<% if (bundle) { %>npm run browser && <% } %>npm run babel && npm run minify",
    "babel": "babel src/index.js --out-file dist/index.js",
    "minify": "uglifyjs dist/index.js -o dist/index.min.js",
    "precommit": "npm test && npm run build",
    "test": "xo && ava"<% if (bundle) { %>,
    "browser": "webpack --config config/webpack.conf.js",
    "bundle": "browserify index.js -s <% camelModuleName %> -t [ babelify --presets [ es2015 ] ] | uglifyjs > bundle.js"<% } %>
  },
  "files": [
    "dist/index.min.js"<% if (cli) { %>,
    "dist/cli.min.js"<% } if (bundle) { %>,
    "dist/bundle.min.js"<% } %>
  ],
  "keywords": [<% if (cli) { %>
    "cli-app",
    "cli",<% } %><% if (appveyor) { %>
    "windows",<% } %><% if (bundle) { %>
    "bundled",
    "web-ready",<% } %>
    "lean",
    "minimal",
    "documented",
    "tested",
    "licensed",
    "ava",
    "dawson"
  ],
  "dependencies": {<% if (cli) { %>
    "meow": "^3.7.0",
    "update-notifier": "^0.6.1"
  <% } %>},
  "devDependencies": {
    "ava": "^0.14.0",
    "husky": "^0.11.4",
    "uglify-js": "^2.6.2",
    "xo": "^0.14.0"<% if (bundle) { %>,
    "webpack": "^1.12.14",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0"<% } %>
  },
  "xo": {
    "space": true
  }
}
